<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.tradeplatform.mapper.ProductMapper">

    <select id="selectUserId" resultType="java.lang.Integer">

        select publisher_id from product where id = #{id}

    </select>


    <select id="selectRole" resultType="java.lang.String">

        select role from user where id = #{id}

    </select>

    <select id="dynamicSelect" resultType="com.tradeplatform.pojo.Product">
        select * from product
        <where>
            <if test="title != null">
                title like concat('%', #{title}, '%')
            </if>
            <if test="type != null">
                type = #{type}
            </if>
<!--            <if test="price != null">-->
<!--                price <= #{price}-->
<!--            </if>-->
            <if test="status != null">
                status = #{status}
            </if>
            <if test="publisher_id != null">
                publisher_id = #{publisher_id}
            </if>

        </where>
    </select>
</mapper>

